<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.hw9.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/activity_home" />

    <fragment
        android:id="@+id/navigation_headlines"
        android:name="com.example.hw9.ui.headlines.HeadlinesFragment"
        android:label="@string/app_name"
        tools:layout="@layout/activity_headlines" />

    <fragment
        android:id="@+id/navigation_trending"
        android:name="com.example.hw9.ui.trend.TrendFragment"
        android:label="@string/app_name"
        tools:layout="@layout/activity_trending" />
    <fragment
        android:id="@+id/navigation_bookmarks"
        android:name="com.example.hw9.ui.bookmarks.BookmarksFragment"
        android:label="@string/app_name"
        tools:layout="@layout/activity_bookmarks" />

</navigation>
